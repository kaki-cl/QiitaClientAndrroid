<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.atuski.qiitaqlient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".QiitaQlientApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:noHistory="false"
                  >
            <!--android:noHistory="false"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="lightqiita.com" />

            </intent-filter>
        </activity>

        <activity
            android:name=".ui.detail.DetailActivity"
            android:label="@string/app_name2">
        </activity>
        <activity
            android:name=".ui.searchhistory.SearchHistoryActivity"
            android:label="@string/searchHistory">
        </activity>
    </application>

</manifest>