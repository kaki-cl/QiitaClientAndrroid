    <!--app:layout_constraintTop_toBottomOf="@+id/appBar"-->
    <!--android:layout_height="match_parent"-->
    <!--app:layout_constraintBottom_toBottomOf="parent" 多分これが原因だった。-->


</android.support.constraint.ConstraintLayout>















