<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="queryObj"
            type="com.example.atuski.qiitaqlient.model.Query">
        </variable>
        <variable
            name="itemViewModel"
            type="com.example.atuski.qiitaqlient.ui.searchhistory.SearchHistoryItemViewModel">
        </variable>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{itemViewModel.query.query}" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="@{itemViewModel::onClick}" />
    </FrameLayout>


</layout>